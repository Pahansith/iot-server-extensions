<?xml version="1.0" encoding="UTF-8"?>
<DeviceCloudMgtConfiguration>

    <DeviceController>
        <DeviceDataStore>WSO2-BAM</DeviceDataStore>
        <DeviceControlQueue>MQTT</DeviceControlQueue>
    </DeviceController>

    <DataStores>
        <DataStore type="WSO2-BAM">
            <class>org.wso2.carbon.device.mgt.iot.common.devicecloud.datastore.bam.BAMDataStore</class>
            <endpoint>tcp://localhost</endpoint>
            <!--<endpoint>tcp://10.100.7.38</endpoint>-->
            <port>7613</port>
            <username>admin</username>
            <password>admin</password>
        </DataStore>

        <DataStore type="WSO2-CEP">
            <class>
                org.wso2.carbon.device.mgt.iot.common.devicecloud.exception.devicecontroller.impl.CEPDataStore
            </class>
            <endpoint>[CEP_ENDPOINT]</endpoint>
            <port>[CEP_PORT]</port>
            <username>admin</username>
            <password>admin</password>
        </DataStore>
    </DataStores>

    <ControlQueues>
        <ControlQueue type="MQTT">
            <class>org.wso2.carbon.device.mgt.iot.common.devicecloud.controlqueue.mqtt.MqttControlPublisher</class>
            <protocol>MQTT</protocol>
            <endpoint>tcp://localhost</endpoint>
            <!--<endpoint>tcp://212.72.74.21</endpoint>-->  <!-- broker.mqtt-dashboard.com -->
            <port>1883</port>
            <username>.</username>
            <password>.</password>
        </ControlQueue>
    </ControlQueues>

    <Security>
        <client>client-truststore.jks</client>
        <password>wso2carbon</password>
    </Security>

</DeviceCloudMgtConfiguration>
