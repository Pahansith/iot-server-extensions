<?xml version="1.0" encoding="UTF-8"?>
<DeviceCloudConfiguration>
    <DataStores>
        <DataStore>
            <Name>WSO2-BAM</Name>
            <Enabled>true</Enabled>
            <PublisherClass>org.wso2.carbon.device.mgt.iot.common.datastore.impl.ThriftDataStoreConnector</PublisherClass>
            <ServerURL>tcp://localhost</ServerURL>
            <Port>7613</Port>
            <Username>admin</Username>
            <Password>admin</Password>
        </DataStore>

        <DataStore>
            <Name>WSO2-CEP</Name>
            <Enabled>true</Enabled>
            <PublisherClass>org.wso2.carbon.device.mgt.iot.common.datastore.impl.ThriftDataStoreConnector</PublisherClass>
            <ServerURL>tcp://localhost</ServerURL>
            <Port>7613</Port>
            <Username>admin</Username>
            <Password>admin</Password>
        </DataStore>
    </DataStores>

    <ControlQueues>
        <ControlQueue>
            <Name>MQTT</Name>
            <Enabled>true</Enabled>
            <ControlClass>org.wso2.carbon.device.mgt.iot.common.controlqueue.mqtt.MqttControlPublisher</ControlClass>
            <Protocol>MQTT</Protocol>
            <ServerURL>tcp://localhost</ServerURL>
            <Port>1883</Port>
            <Username>.</Username>
            <Password>.</Password>
        </ControlQueue>

        <ControlQueue>
            <Name>XMPP</Name>
            <Enabled>true</Enabled>
            <ControlClass>org.wso2.carbon.device.mgt.iot.common.controlqueue.xmpp.XmppServerClient</ControlClass>
            <Protocol>XMPP</Protocol>
            <ServerURL>http://192.168.57.129</ServerURL>
            <Port>9090</Port>
            <Username>.</Username>
            <Password>.</Password>
        </ControlQueue>
    </ControlQueues>

    <Security>
        <ClientTrustStore>client-truststore.jks</ClientTrustStore>
        <Password>wso2carbon</Password>
    </Security>

    <ApiManager>
        <Enabled>true</Enabled>
        <AccessTokenURL>https://localhost:9444/oauth2/token</AccessTokenURL>
        <LoginURL>sdf</LoginURL>
        <SubscriptionListURL>fdas</SubscriptionListURL>
        <DeviceGrantType>devicecloud</DeviceGrantType>
        <DeviceScopes>PRODUCTION</DeviceScopes>
    </ApiManager>

    <DeviceUserValidatorCacheSize>1000</DeviceUserValidatorCacheSize>

</DeviceCloudConfiguration>
